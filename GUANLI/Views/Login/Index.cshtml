            </div>

            <div class="form-item">
                <label>密码:</label>
                <input type="password" name="user_pwd" />
            </div>
            <input class="btn" type="button" value="登陆" />&nbsp;&nbsp;&nbsp;<a href="zhuc">注册</a>
        </form>
        @*}*@
    </div>
</body>
</html>
